<odoo>
    <data>
        <record model="ir.actions.act_window" id="asw_eventos_list_action">
            <field name="name">Eventos</field>
            <field name="res_model">asw.eventos</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Cree el primer Eventos</p>
            </field>
        </record>

        <record id="view_tree_eventos_ui" model="ir.ui.view">
            <field name="name">Eventos</field>
            <field name="model">asw.eventos</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="motivo" />
                    <field name="fecha" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="view_form_eventos_ui" model="ir.ui.view">
            <field name="name">Eventos</field>
            <field name="model">asw.eventos</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        
                        <button name="aprobar" string="Aprobar" type="object" class="oe_highlight"/>
                        
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group col='4'>
                            <field name="motivo" />
                            <field name="fecha" />
                            <field name="active" />
                            <field name="event_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_eventos" model="ir.ui.view">
            <field name="name">Eventos</field>
            <field name="model">asw.eventos</field>
            <field name="arch" type="xml">
                <search>
                    <field name="motivo" />
                    <field name="fecha" />
                </search>
            </field>
        </record>

        <record id="view_calendar_eventos_ui" model="ir.ui.view">
            <field name="name">Calendario de Eventos</field>
            <field name="model">asw.eventos</field>
            <field name="arch" type="xml">
                <calendar 
                    string="Eventos personalizados"
                    date_start='fecha'
                    date_stop='fecha'                    
                    display='motivo'
                    color='state'>
                    <field name="motivo" />
                    <field name="state" />
                </calendar>               
            </field>
        </record>
    </data>
</odoo>